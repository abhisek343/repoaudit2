{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "CommonJS",
    "skipLibCheck": true,
    "outDir": "./dist-server",
    "types": ["node"],

    /* Bundler mode */
    "moduleResolution": "node",
    // "allowImportingTsExtensions": true, // Not needed for CommonJS server
    // "isolatedModules": true, // Not needed for CommonJS server
    "moduleDetection": "force",    "noEmit": false,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true, // Often useful in Node.js projects
    "esModuleInterop": true // For better compatibility with CommonJS modules
  },
  "include": ["server.ts", "src/**/*"],
  "exclude": ["src/**/*.test.ts", "src/**/__tests__/**/*"]
}
